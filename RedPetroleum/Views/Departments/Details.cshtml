@model RedPetroleum.Models.Entities.Department

@{
    ViewBag.Title = "Подробно";
    
}

<h2>Подробная информация</h2>

<div>
    <h4>Отделы</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Имя отдела
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
           Имя управляющего отдела
        </dt>
        <dd>
            @ViewBag.Parent
        </dd>

    </dl>
</div>
<div class="form-group">
    <div class="btn-group" role="group">
        <a href="@Url.Action("Edit", "Departments", new { id = Model.DepartmentId})" class="btn btn-success"><i class="fa fa-pencil" aria-hidden="true" title="Редактировать" data-toggle="tooltip" data-placement="top"><span style="padding: 5px;">Редактировать</span></i></a>
        <a href="@Url.Action("Index", "Departments")" class="btn btn-info"><i class="fa fa-arrow-left" aria-hidden="true" title="Назад" data-toggle="tooltip" data-placement="top"><span style="padding: 5px;">Назад</span></i></a>
    </div>
</div>