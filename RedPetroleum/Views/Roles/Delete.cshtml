@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Удаление";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Удаление</h4>
    </div>
    <div class="modal-body">
        <div class="dl-horizontal">
            Вы действительно хотите удалить:<span><b>  @Html.DisplayFor(model => model.Name)</b></span>
        </div>
    </div>
    @using (Html.BeginForm("Delete", "Roles", FormMethod.Post, new { enctype = "multipart/form-data", @class = "delete-form" }))
    {
        
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </div>
    }
</div>